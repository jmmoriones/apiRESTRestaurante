extends ../layout.pug

block content
  Header.Header
    div.container
      div.row
        article.col-12
          a.link-style(href="/admin") Inicio
  section.container
    div.row
      article.col-12
        form(method="POST", action="/agregar-plato", enctype="multipart/form-data")
          div.form-group
            label(for="nombre-plato") Nombre
            input#nombre-plato.form-control(name="nombrep", type="text", placeholder="Platos americanos")
          div.form-group
            label(for="descripcion-plato") Descripcion
            textarea#descripcion-plato.form-control(name="descripcion", rows="3", placeholder="Esta receta ....")
          div.form-group
            label.mr-sm-2(for="inlineFormCustomSelect") Dificultad
            select.custom-select.mb-2.mr-sm-2.mb-sm-0#inlineFormCustomSelect(name="dificultad")
              option(selected) - - -
              option(value="1", name="dificultad-1") 1
              option(value="2", name="dificultad-2") 2
              option(value="3", name="dificultad-3") 3
              option(value="4", name="dificultad-4") 4
              option(value="5", name="dificultad-5") 5
          div.form-group
            label(for="exampleFormControlFile1") Imagen
            input.form-control-file#exampleFormControlFile1(type="file", name="photo", accept="image/*")
          div.form-group
            label(for="precio-plato") Precio
            input#precio-plato.form-control(name="precio", type="text", placeholder="10.00")
          div.form-group
            select.form-control(name="categoria")
              if(data.length)
                option(selected) - - -
                each categoria in data
                  option(value=`${categoria.nombrec}`) #{categoria.nombrec}
              else
                option - - -
          button.btn.btn-primary(type="submit") Guardar
          a.btn.btn-danger(href="/admin") Cancelar