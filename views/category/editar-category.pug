extends ../layout.pug

block content
  header.Header
    div.container
      div.row
        article.col-12
          a.link-style(href="/admin") Inicio
  section.container
    div.row
      article.col-12
        each d in data
          form(method="POST", action="/editar/"+d.id)
            input(type="hidden", name="id", value=d.id)
            div.form-group
              label(for="titulo-categoria") Nombre
              input#titulo-categoria.form-control(name="nombrec", type="text", placeholder="Platos americanos", value=`${d.nombrec}`, disabled)
            div.form-group
              label(for="descripcion-categoria") Descripcion
              textarea#descripcion-categoria.form-control(name="descripcion", rows="3", placeholder="Esta receta ....", required) #{d.descripcion}
            div.form-group
              label(for="encargado-categoria") Encargado
              input#encargado-categoria.form-control(name="nom_encargado", type="text", placeholder="Pepito Perez", value=`${d.nom_encargado}`, required)
            button.btn.btn-primary(type="submit") Editar
            a.btn.btn-danger(href="/admin") Cancelar